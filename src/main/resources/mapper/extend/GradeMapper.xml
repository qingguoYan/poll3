<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll.dao.extend.GradeVMMapper">
	<select id="SelectAll" resultMap="GradeVMMapper">
		select * from poll_grade
		<!-- id,name,description,school_id -->
	</select>
	<select id="selectByPrimaryKey" parameterType="long" resultMap="GradeVMMapper">
		select * from poll_grade
		where id=#{id}
	</select>
	<select id="selectByExampleWithBLOBs" resultMap="GradeVMMapper">
		select * from poll_grade
		where descriptioin like CONCAT('%', #{text},'%')
	</select>
	<!--
		定义结果集
	-->
	<resultMap type="com.briup.apps.poll.bean.extend.GradeVM" id="GradeVMMapper">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="description" property="description"/>
		<association 
		column="school_id" property="school"
		select="com.briup.apps.poll.dao.SchoolMapper.selectByPrimaryKey">
		</association>
	</resultMap>

</mapper>